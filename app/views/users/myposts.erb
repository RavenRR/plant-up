<a href="/posts/new" class="BUTTON">Create a new post</a><hr>
<% @posts.each do |post| %>
    <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
    <img src="<%= post.image %>">
    <% if current_user == post.user %>
    <a href="/posts/ <%= post.id %>/edit" class="BUTTON">Edit</a>
    <% end %>
<% end %>